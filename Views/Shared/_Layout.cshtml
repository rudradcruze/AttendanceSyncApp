@using System.Configuration
@* main user layout template with navigation bar *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Smart Tool</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/Attandance.css" rel="stylesheet" />
</head>
<body>
    @* top navigation bar *@
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Attandance")">Attandance Sync</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                @* navigation menu items *@
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Attandance")">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "CompanyRequest")">Request Company</a>
                    </li>
                </ul>
                @* user menu populated by javascript *@
                <ul class="navbar-nav" id="userNavMenu"></ul>
            </div>
        </div>
    </nav>

    @* main content area *@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AttandanceSyncApp</p>
        </footer>
    </div>

    @* required javascript libraries *@
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/sweetalert2@11.js"></script>
    @* app configuration *@
    <script>
        window.APP = {
            baseUrl: '@Url.Content(ConfigurationManager.AppSettings["AppBaseUrl"])'
        };
    </script>
    @* common user scripts *@
    <script src="~/Scripts/User/User.js"></script>
    <script src="~/Scripts/Common.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
