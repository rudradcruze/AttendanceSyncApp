@using System.Configuration
@* page title and layout *@
@{
    ViewBag.Title = "My Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-requests mt-4">
    @* header with new request button *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>My Sync Requests</h4>
        <button class="btn btn-primary" onclick="showCreateModal()">
            New Request
        </button>
    </div>

    @* user sync requests table *@
    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="requestsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Employee</th>
                    <th>Company</th>
                    <th>Tool</th>
                    <th>From Date</th>
                    <th>To Date</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    @* pagination controls *@
    <div id="pagination" class="pagination-wrapper"></div>
</div>

@* modal for creating new sync request *@
<div class="modal fade" id="createRequestModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Sync Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createRequestForm">
                    <div class="form-group mb-3">
                        <label for="employeeId">Employee <span class="text-danger">*</span></label>
                        <select class="form-control" id="employeeId" required>
                            <option value="">Select Employee</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="companyId">Company <span class="text-danger">*</span></label>
                        <select class="form-control" id="companyId" required>
                            <option value="">Select Company</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="toolId">Tool <span class="text-danger">*</span></label>
                        <select class="form-control" id="toolId" required>
                            <option value="">Select Tool</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="fromDate">From Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="fromDate" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="toDate">To Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="toDate" required />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="submitRequestBtn">Submit Request</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* app configuration *@
    <script>
        window.APP = {
            baseUrl: '@Url.Content(ConfigurationManager.AppSettings["AppBaseUrl"])'
        };
    </script>
    @* sync requests functionality script *@
    <script src="~/Scripts/AttandanceSync/Requests.js"></script>
}
