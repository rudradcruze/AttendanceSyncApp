@* page title and layout *@
@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card shadow">
        <div class="auth-header">
            <h2>Sign In</h2>
            <p>Welcome back to Smart Tool</p>
        </div>

        <!-- Google Sign-In Button -->
        <div class="google-signin-section">
            <div id="g_id_onload"
                 data-client_id="@ViewBag.GoogleClientId"
                 data-context="signin"
                 data-ux_mode="popup"
                 data-callback="handleGoogleSignIn"
                 data-auto_prompt="false">
            </div>

            <div id="googleSignInContainer">
                <div class="g_id_signin"
                     data-type="standard"
                     data-shape="rectangular"
                     data-theme="outline"
                     data-text="signin_with"
                     data-size="large"
                     data-logo_alignment="left"
                     data-width="300">
                </div>
            </div>
            <div id="googleSignInSpinner" class="text-center py-2" style="display:none;">
                <span class="spinner-border spinner-border-sm text-primary" role="status" aria-hidden="true"></span>
                <span class="ms-2">Signing in with Google...</span>
            </div>
        </div>

        <div class="divider">
            <span>or</span>
        </div>

        <!-- Email Login Form -->
        <div class="email-login-section">
            @* form was handled in the Auth.js file *@
            <form id="emailLoginForm">
                <div class="form-group mb-3">
                    <label for="loginEmail">Email</label>
                    <input type="email" class="form-control" id="loginEmail" placeholder="Enter your email" required/>
                </div>
                <div class="form-group mb-3">
                    <label for="loginPassword">Password</label>
                    <input type="password" class="form-control" id="loginPassword" placeholder="Enter your password" required/>
                </div>
                <button type="submit" class="btn btn-primary btn-block w-100" id="loginButton">
                    <span class="button-text">Sign In</span>
                    <span class="button-spinner" style="display: none;">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Signing in...
                    </span>
                </button>
            </form>
        </div>
        
        @* showing alert message *@
        <div id="message" class="alert d-none mt-3"></div>
        
        @* Sign up button by click on this it will redirect to the sign up page *@
        <div class="auth-footer">
            <p>Don't have an account? <a href="@Url.Action("Register", "Auth")">Sign Up</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @* handel google sign in and sign up page *@
    <script src="https://accounts.google.com/gsi/client" async defer></script> 
    @* script to all action and api in the auth.js file *@
    <script src="~/Scripts/Auth.js"></script>
}
