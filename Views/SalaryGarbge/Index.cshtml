        </div>
    </div>

    <!-- Selection Section (Hidden initially) -->
    <div id="selectionSection" style="display: none;">
        <div class="section-header">
            <h5 id="scanTypeTitle">Configure Scan</h5>
        </div>

        <!-- Step 1: Server IP Selection -->
        <div class="selection-step" id="serverIpSelectionDiv">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="mb-0">
                    <span class="step-number">1</span>
                    Select Server IP <span class="text-danger ms-1">*</span>
                </h6>
            </div>
            <div class="row" id="serverIpContainer">
                <div class="col-12 text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading server IPs...</p>
                </div>
            </div>
        </div>

        <!-- Step 2: Database Selection -->
        <div class="selection-step" id="databaseSelectionDiv" style="display: none;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="mb-0">
                    <span class="step-number">2</span>
                    Select Databases <span class="text-danger ms-1">*</span>
                </h6>
                <div>
                    <button type="button" class="btn btn-sm btn-outline-primary me-1" onclick="selectAllDatabases()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-check-all me-1" viewBox="0 0 16 16">
                            <path d="M8.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L2.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093L8.95 4.992a.252.252 0 0 1 .02-.022zm-.92 5.14.92.92a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 1 0-1.091-1.028L9.477 9.417l-.485-.486-.943 1.179z" />
                        </svg>
                        Select All
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="deselectAllDatabases()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-x-lg me-1" viewBox="0 0 16 16">
                            <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                        </svg>
                        Clear All
                    </button>
                </div>
            </div>
            <div class="summary-info mb-3">
                <div class="info-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
