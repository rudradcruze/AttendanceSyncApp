@{
    ViewBag.Title = "Attendance Synchronization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Attendance Synchronization System</h2>
<hr />

<!-- Form Section -->
<div class="form-section">
    <h4>Create New Synchronization</h4>

    <form id="syncForm">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <label>From Date</label>
                    <input type="date" class="form-control" id="fromDate" required />
                </div>
            </div>

            <div class="col-md-5">
                <div class="form-group">
                    <label>To Date</label>
                    <input type="date" class="form-control" id="toDate" required />
                </div>
            </div>

            <div class="col-md-2">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary btn-block">
                    Create
                </button>
            </div>
        </div>
    </form>

    <div id="message" class="alert" style="display:none; margin-top:15px;"></div>
</div>

<!-- Table Section -->
<div class="table-section">
    <h4>Synchronization Records</h4>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>From Date</th>
                <th>To Date</th>
                <th>Company</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody id="syncTableBody">
            <tr>
                <td colspan="5" class="text-center">Loading...</td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/Scripts/Attendance.js"></script>
}
