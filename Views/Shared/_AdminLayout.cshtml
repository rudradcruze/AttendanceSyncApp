@using System.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/Admin.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <h4>Admin Panel</h4>
            </div>
            <ul class="sidebar-menu">
                <li class="@(ViewBag.ActiveMenu == "Dashboard" ? "active" : "")">
                    <a href="@Url.Action("Index", "AdminDashboard")">Dashboard</a>
                </li>
                <li class="@((ViewBag.ActiveMenu == "SyncRequests" || ViewBag.ActiveMenu == "CompanyRequests") ? "active" : "")">
                    <a href="#requestsSubmenu" data-bs-toggle="collapse" aria-expanded="@((ViewBag.ActiveMenu == "SyncRequests" || ViewBag.ActiveMenu == "CompanyRequests") ? "true" : "false")" class="dropdown-toggle">Requests</a>
                    <ul class="collapse list-unstyled @((ViewBag.ActiveMenu == "SyncRequests" || ViewBag.ActiveMenu == "CompanyRequests") ? "show" : "")" id="requestsSubmenu" style="padding-left: 20px;">
                        <li class="@(ViewBag.ActiveMenu == "SyncRequests" ? "active" : "")">
                            <a href="@Url.Action("SyncRequests", "AdminRequests")" style="color: #adb5bd; font-size: 0.9em;">Sync Request</a>
                        </li>
                        <li class="@(ViewBag.ActiveMenu == "CompanyRequests" ? "active" : "")">
                            <a href="@Url.Action("Index", "AdminCompanyRequests")" style="color: #adb5bd; font-size: 0.9em;">Company Request</a>
                        </li>
                    </ul>
                </li>
                <li class="@(ViewBag.ActiveMenu == "Users" ? "active" : "")">
                    <a href="@Url.Action("Index", "AdminUsers")">Users</a>
                </li>
                <li class="@(ViewBag.ActiveMenu == "Employees" ? "active" : "")">
                    <a href="@Url.Action("Index", "AdminEmployees")">Employees</a>
                </li>
                <li class="@(ViewBag.ActiveMenu == "Companies" ? "active" : "")">
                    <a href="@Url.Action("Index", "AdminCompanies")">Companies</a>
                </li>
                <li class="@(ViewBag.ActiveMenu == "Tools" ? "active" : "")">
                    <a href="@Url.Action("Index", "AdminTools")">Tools</a>
                </li>
                <li class="@((ViewBag.ActiveMenu == "DatabaseConfigs" || ViewBag.ActiveMenu == "Assignments") ? "active" : "")">
                    <a href="#databasesSubmenu" data-bs-toggle="collapse" aria-expanded="@((ViewBag.ActiveMenu == "DatabaseConfigs" || ViewBag.ActiveMenu == "Assignments") ? "true" : "false")" class="dropdown-toggle">Databases</a>
                    <ul class="collapse list-unstyled @((ViewBag.ActiveMenu == "DatabaseConfigs" || ViewBag.ActiveMenu == "Assignments") ? "show" : "")" id="databasesSubmenu" style="padding-left: 20px;">
                        <li class="@(ViewBag.ActiveMenu == "DatabaseConfigs" ? "active" : "")">
                            <a href="@Url.Action("Index", "AdminDatabaseConfigurations")" style="color: #adb5bd; font-size: 0.9em;">Database Configs</a>
                        </li>
                        <li class="@(ViewBag.ActiveMenu == "Assignments" ? "active" : "")">
                            <a href="@Url.Action("Index", "AdminDatabaseAssignments")" style="color: #adb5bd; font-size: 0.9em;">Database Assignments</a>
                        </li>
                    </ul>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="#" onclick="logout(); return false;">Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="admin-content">
            <header class="admin-header">
                <h2>@ViewBag.Title</h2>
                <div class="user-info" id="adminUserInfo"></div>
            </header>
            <main class="admin-main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/sweetalert2@11.js"></script>
    <script>
        window.APP = {
            baseUrl: '@Url.Content(ConfigurationManager.AppSettings["AppBaseUrl"])'
        };
    </script>
    <script src="~/Scripts/Common.js"></script>
    <script src="~/Scripts/Admin/Admin.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
