@* page title and layout *@
@{
    ViewBag.Title = "Salary Garbage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* custom style for this page *@
<style>
    .garbage-container {
        padding: 20px 0;
    }

    .tool-card {
        border: none;
        border-radius: 15px;
        color: white;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-height: 180px;
    }

    .tool-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .tool-card .card-body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .tool-card .card-icon {
        font-size: 48px;
        margin-bottom: 15px;
    }

    .tool-card .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .tool-card .card-text {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .confirm-card {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    }

    .problematic-card {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .scan-progress {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .progress-item {
        display: flex;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #eee;
    }

    .progress-item:last-child {
        border-bottom: none;
    }

    .progress-item .status-icon {
        width: 30px;
        margin-right: 15px;
    }

    .progress-item.scanning .status-icon {
        color: #17a2b8;
    }

    .progress-item.completed .status-icon {
        color: #28a745;
    }

    .progress-item.error .status-icon {
        color: #dc3545;
    }

    .spinner-border-sm {
        width: 1rem;
        height: 1rem;
    }

    .results-container {
        margin-top: 20px;
    }

    .problem-badge {
        font-size: 0.8rem;
        padding: 5px 10px;
        border-radius: 15px;
    }

    .problem-gradescale-0 {
        background-color: #ffc107;
        color: #000;
    }

    .problem-gradescale-null {
        background-color: #dc3545;
        color: #fff;
    }

    .problem-salary-0 {
        background-color: #fd7e14;
        color: #fff;
    }

    .problem-salary-null {
        background-color: #e83e8c;
        color: #fff;
    }

    .summary-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .summary-stat {
        text-align: center;
        padding: 10px;
    }

    .summary-stat .number {
        font-size: 2rem;
        font-weight: bold;
    }

    .summary-stat .label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .no-data-message {
        text-align: center;
        padding: 40px;
        color: #6c757d;
    }

    .back-btn {
        margin-bottom: 20px;
    }

    .issue-badge {
        font-size: 0.8rem;
        padding: 5px 10px;
        border-radius: 15px;
    }

    .issue-promotion {
        background-color: #6f42c1;
        color: #fff;
    }

    .issue-confirmation {
        background-color: #20c997;
        color: #fff;
    }

    .salary-mismatch {
        color: #dc3545;
        font-weight: bold;
    }

    .salary-expected {
        color: #28a745;
        font-weight: bold;
    }

    /* Step Indicator Styles */
    .step-indicator {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .step {
        display: flex;
        align-items: center;
        color: #6c757d;
    }

    .step.active {
        color: #667eea;
        font-weight: 600;
    }

    .step.completed {
        color: #28a745;
    }

    .step-number {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 8px;
        font-weight: bold;
    }

    .step.active .step-number {
        background: #667eea;
        color: white;
    }

    .step.completed .step-number {
        background: #28a745;
        color: white;
    }

    .step-divider {
        width: 50px;
        height: 2px;
        background: #e9ecef;
        margin: 0 15px;
    }

    /* IP and Database Card Styles */
    .ip-card, .db-card {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        background: white;
    }

    .ip-card:hover, .db-card:hover {
        border-color: #667eea;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
    }

    .ip-card.selected, .db-card.selected {
        border-color: #667eea;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .ip-card .ip-icon, .db-card .db-icon {
        font-size: 2rem;
        margin-bottom: 10px;
    }

    .ip-card .ip-address, .db-card .db-name {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .ip-card .ip-desc, .db-card .db-desc {
        font-size: 0.85rem;
        opacity: 0.8;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .summary-info {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
    }

        .summary-info .info-item {
            display: flex;
            align-items: center;
            gap: 10px;
        }
</style>

<div class="garbage-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Salary Garbage Tool</h2>
        <a href="@Url.Action("Dashboard", "Attandance")" class="btn btn-outline-secondary">
