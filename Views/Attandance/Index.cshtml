@using System.Configuration
@{
    ViewBag.Title = "Attandance Synchronization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-2">Attandance Synchronization System</h2>
    <hr class="w-25 mx-auto mb-4" style="border-top: 2px solid #667eea;" />

    <!-- Company Database Selector (Required for Context) -->
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <label class="form-label"><strong>Select Company Database</strong></label>
                    <select class="form-select" id="companyDatabaseSelect">
                        <option value="">-- Select Company Database --</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div id="syncContent" class="d-none">
        <!-- Form Section -->
        <div class="form-section shadow mb-4 p-4 bg-white rounded">
            <h4 class="mb-4">Create New Synchronization</h4>
            <form id="syncForm">
                <div class="row">
                    <!-- Hidden fields for context -->
                    <input type="hidden" id="selectedCompanyId" />
                    <input type="hidden" id="selectedToolId" />
                    <input type="hidden" id="selectedDbConfigId" />

                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="form-label">Employee <span class="text-danger">*</span></label>
                            <select class="form-select" id="employeeId" required>
                                <option value="">Select Employee</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="form-group">
                            <label>From Date</label>
                            <input type="date" class="form-control" id="fromDate" required />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>To Date</label>
                            <input type="date" class="form-control" id="toDate" required />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="d-block">&nbsp;</label>
                        <button type="button" class="btn btn-primary btn-block w-100" id="submitSyncBtn" onclick="createSynchronization()">
                            Create
                        </button>
                    </div>
                </div>
            </form>
            <div id="message" class="alert d-none mt-3"></div>
        </div>

        <!-- Sort Accordion -->
        <div class="accordion mb-4" id="sortAccordion">
            <div class="accordion-item shadow-sm">
                <h2 class="accordion-header" id="sortHeading">
                    <button class="accordion-button collapsed fw-semibold"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#sortCollapse"
                            aria-expanded="false"
                            aria-controls="sortCollapse">
                        <i class="fa fa-sort me-2 text-primary"></i>
                        Sort Synchronization Records
                    </button>
                </h2>
                <div id="sortCollapse"
                     class="accordion-collapse collapse"
                     aria-labelledby="sortHeading"
                     data-bs-parent="#sortAccordion">
                    <div class="accordion-body">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Sort Field</label>
                                <select id="sortColumn" class="form-select">
                                    <option value="ToDate">To Date</option>
                                    <option value="FromDate">From Date</option>
                                    <option value="Id">ID</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Sort Order</label>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-outline-secondary w-50 sort-dir-btn active" data-value="DESC" onclick="setSortDirection('DESC')">Desc</button>
                                    <button type="button" class="btn btn-outline-secondary w-50 sort-dir-btn" data-value="ASC" onclick="setSortDirection('ASC')">Asc</button>
                                </div>
                                <input type="hidden" id="sortDirection" value="DESC" />
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary w-100 py-2" onclick="loadSynchronizations(1)">
                                    Apply Sorting
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="table-section shadow p-4 bg-white rounded">
            <h4 class="mb-3">Synchronization Records</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover mb-0">
                    <thead>
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Employee</th>
                            <th>From Date</th>
                            <th>To Date</th>
                            <th>Status</th>
                            <th>External ID</th>
                        </tr>
                    </thead>
                    <tbody id="syncTableBody" class="text-center">
                        <tr>
                            <td colspan="6">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="pagination-wrapper navigation mt-2">
                <div class="text-center">
                    <ul class="pagination justify-content-center" id="pagination"></ul>
                </div>
            </div>
        </div>
    </div>
    
    <!-- No Access Message -->
    <div id="noAccessMessage" class="d-none">
        <div class="alert alert-warning text-center mt-4">
            <h5>No Company Access</h5>
            <p>You don't have access to any company databases. Please request company access first.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.APP = {
            baseUrl: '@Url.Content(ConfigurationManager.AppSettings["AppBaseUrl"])'
        };
    </script>
    <script src="~/Scripts/Attandance/AttandanceSync.js"></script>
}
