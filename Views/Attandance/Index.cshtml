@using System.Configuration
@{
    ViewBag.Title = "Attandance Synchronization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-2">Attandance Synchronization System</h2>
    <hr class="w-25 mx-auto mb-4" style="border-top: 2px solid #667eea;" />

    <!-- Form Section -->
    <div class="form-section shadow">
        <h4 class="mb-4">Create New Request</h4>
        <form id="syncForm">
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Employee</label>
                        <select class="form-control" id="userId" required>
                            <option value="">Select Employee</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Company</label>
                        <select class="form-control" id="companyId" required>
                            <option value="">Select Company</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Tool</label>
                        <select class="form-control" id="toolId" required>
                            <option value="">Select Tool</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" class="form-control" id="fromDate" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" class="form-control" id="toDate" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" id="userEmail" readonly />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-end">
                    <button type="submit" class="btn btn-primary">
                        Create Request
                    </button>
                </div>
            </div>
        </form>
        <div id="message" class="alert d-none mt-3"></div>
    </div>

    <!-- Table Section -->
    <div class="table-section shadow">
        <h4 class="mb-3">My Synchronization Requests</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover mb-0">
                <thead>
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Employee</th>
                        <th>Company</th>
                        <th>Tool</th>
                        <th>From Date</th>
                        <th>To Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="syncTableBody" class="text-center">
                    <tr>
                        <td colspan="7">Loading...</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="pagination-wrapper navigation mt-2">
            <div class="text-center">
                <ul class="pagination" id="pagination"></ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.APP = {
            baseUrl: '@Url.Content(ConfigurationManager.AppSettings["AppBaseUrl"])'
        };
    </script>
    <script src="~/Scripts/Attandance.js"></script>
}
