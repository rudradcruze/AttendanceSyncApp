@using System.Configuration
@{
    ViewBag.Title = "Manage Server IPs";
    ViewBag.ActiveMenu = "ServerIps";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="serverip-management">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Server IPs List</h5>
        <button class="btn btn-primary" onclick="showCreateModal()">
            Add Server IP
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped" id="serverIpsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>IP Address</th>
                    <th>Database User</th>
                    <th>Password</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="pagination" class="pagination-wrapper"></div>
</div>

<!-- Create/Edit Server IP Modal -->
<div class="modal fade" id="serverIpModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="serverIpModalTitle">Add Server IP</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="serverIpForm">
                    <input type="hidden" id="serverIpId" />
                    <div class="form-group mb-3">
                        <label for="ipAddress">IP Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="ipAddress" required maxlength="100" placeholder="e.g., 192.168.1.100" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="databaseUser">Database User <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="databaseUser" required maxlength="100" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="databasePassword">Database Password <span class="text-danger password-required">*</span></label>
                        <input type="password" class="form-control" id="databasePassword" maxlength="500" placeholder="" />
                        <small class="text-muted password-hint" style="display: none;">Leave blank to keep existing password</small>
                        <div class="form-check mt-1">
                            <input type="checkbox" class="form-check-input" id="showPassword" onclick="togglePasswordVisibility()" />
                            <label class="form-check-label" for="showPassword">Show Password</label>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="serverDescription">Description</label>
                        <textarea class="form-control" id="serverDescription" rows="3" maxlength="500"></textarea>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="serverActive" checked />
                        <label class="form-check-label" for="serverActive">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveServerIpBtn">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.APP = {
            baseUrl: '@Url.Content(ConfigurationManager.AppSettings["AppBaseUrl"])'
        };
    </script>
    <script src="~/Scripts/Admin/SalaryGarbge/ServerIp.js"></script>
}
