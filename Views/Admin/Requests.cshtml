@{
    ViewBag.Title = "Manage Requests";
    ViewBag.ActiveMenu = "Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="requests-management">
    <!-- Tab Navigation -->
    <ul class="nav nav-tabs mb-3" id="requestsTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="sync-tab" data-bs-toggle="tab" data-bs-target="#sync-requests" type="button" role="tab">
                Sync Requests
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="company-tab" data-bs-toggle="tab" data-bs-target="#company-requests" type="button" role="tab">
                Company Requests
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="requestsTabContent">
        <!-- Sync Requests Tab -->
        <div class="tab-pane fade show active" id="sync-requests" role="tabpanel">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="requestsTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Company</th>
                            <th>Tool</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div id="pagination" class="pagination-wrapper"></div>
        </div>

        <!-- Company Requests Tab -->
        <div class="tab-pane fade" id="company-requests" role="tabpanel">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="companyRequestsTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Employee</th>
                            <th>Company</th>
                            <th>Tool</th>
                            <th>Status</th>
                            <th>Cancelled</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div id="companyPagination" class="pagination-wrapper"></div>
        </div>
    </div>
</div>

<!-- Database Assignment Modal -->
<div class="modal fade" id="assignDatabaseModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign Database Configuration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Request Info -->
                <div class="request-info mb-4 p-3 bg-light rounded">
                    <h6>Request Information</h6>
                    <div class="row">
                        <div class="col-12">
                            <p><strong>User:</strong> <span id="reqUserName"></span></p>
                            <p><strong>Email:</strong> <span id="reqUserEmail"></span></p>
                        </div>
                        <div class="col-12">
                            <p><strong>Company:</strong> <span id="reqCompanyName"></span></p>
                            <p><strong>Tool:</strong> <span id="reqToolName"></span></p>
                        </div>
                    </div>
                </div>

                <form id="assignDatabaseForm">
                    <input type="hidden" id="requestId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label>Database IP / Server</label>
                                <input type="text" class="form-control" id="databaseIP"
                                       placeholder="e.g., . or 192.168.1.100" required />
                                <small class="text-muted">Use "." for localhost</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label>Database Name</label>
                                <input type="text" class="form-control" id="databaseName"
                                       placeholder="e.g., Smart_v4_DS" required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label>Database User ID</label>
                                <input type="text" class="form-control" id="databaseUserId"
                                       placeholder="e.g., sa" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label>Database Password</label>
                                <input type="password" class="form-control" id="databasePassword" required />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="button" class="btn btn-secondary" id="testConnectionBtn">
                            Test Connection
                        </button>
                        <span id="connectionStatus" class="ms-2"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="assignDatabaseBtn">
                    Assign & Complete Request
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Company Request Status Modal -->
<div class="modal fade" id="updateCompanyStatusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Company Request Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Request Info -->
                <div class="request-info mb-4 p-3 bg-light rounded">
                    <h6>Request Information</h6>
                    <div class="row">
                        <div class="col-12">
                            <p><strong>User:</strong> <span id="crUserName"></span></p>
                            <p><strong>Email:</strong> <span id="crUserEmail"></span></p>
                        </div>
                        <div class="col-12">
                            <p><strong>Employee:</strong> <span id="crEmployeeName"></span></p>
                            <p><strong>Company:</strong> <span id="crCompanyName"></span></p>
                            <p><strong>Tool:</strong> <span id="crToolName"></span></p>
                        </div>
                    </div>
                </div>

                <form id="updateStatusForm">
                    <input type="hidden" id="crRequestId" />
                    <div class="form-group mb-3">
                        <label for="crStatus">New Status</label>
                        <select class="form-control" id="crStatus" required>
                            <option value="">Select Status</option>
                            <option value="NR">New Request</option>
                            <option value="IP">In Progress</option>
                            <option value="CP">Completed</option>
                            <option value="RR">Rejected</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="updateStatusBtn">Update Status</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Admin/Requests.js"></script>
}
