@* page title and layout *@
@{
    ViewBag.Title = "Company Requests";
    ViewBag.ActiveMenu = "CompanyRequests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="requests-management">
    <div class="card">
        @* header with new requests badge *@
        <div class="card-header d-flex justify-content-between align-items-center">
            <span id="newRequestsBadge" class="badge bg-danger" style="display:none;">New requests available</span>
        </div>
        <div class="card-body">
            @* company requests table *@
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="companyRequestsTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Employee</th>
                            <th>Company</th>
                            <th>Tool</th>
                            <th>Status</th>
                            @*<th>Cancelled</th>*@
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            @* pagination controls *@
            <div id="companyPagination" class="pagination-wrapper"></div>
        </div>
    </div>
</div>

@* modal for assigning database configuration to requests *@
<div class="modal fade" id="assignDatabaseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign Database Configuration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Request Info -->
                <div class="request-info mb-4 p-3 bg-light rounded">
                    <h6>Request Information</h6>
                    <div class="row">
                        <div class="col-12">
                            <p><strong>User:</strong> <span id="adUserName"></span></p>
                            <p><strong>Employee:</strong> <span id="adEmployeeName"></span></p>
                            <p><strong>Company:</strong> <span id="adCompanyName"></span></p>
                            <p><strong>Tool:</strong> <span id="adToolName"></span></p>
                        </div>
                    </div>
                </div>

                <!-- Database Config Info -->
                <div id="dbConfigSection">
                    <div class="db-config-info p-3 bg-info bg-opacity-10 rounded">
                        <h6>Database Configuration</h6>
                        <div class="row">
                            <div class="col-12">
                                <p><strong>Database IP:</strong> <span id="adDatabaseIP"></span></p>
                                <p><strong>Database Name:</strong> <span id="adDatabaseName"></span></p>
                                <p><strong>Database User:</strong> <span id="adDatabaseUserId"></span></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- No Config Error -->
                <div id="noConfigSection" class="alert alert-danger" style="display:none;">
                    <strong>Error:</strong> <span id="noConfigMessage"></span>
                </div>

                <input type="hidden" id="adRequestId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="assignDatabaseBtn">Assign Database</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* script file for company requests management functionality *@
    <script src="~/Scripts/Admin/CompanyRequests.js"></script>
}
