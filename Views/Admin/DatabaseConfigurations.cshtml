@{
    ViewBag.Title = "Database Configurations";
    ViewBag.ActiveMenu = "DatabaseConfigs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="database-config-management">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4>Configuration Records</h4>
            <button class="btn btn-primary" onclick="openCreateModal()">
                <i class="fas fa-plus"></i> Add New Configuration
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="configsTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Company</th>
                            <th>Database IP</th>
                            <th>Database Name</th>
                            <th>DB User</th>
                            <th>DB Password</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div id="pagination" class="pagination-wrapper"></div>
        </div>
    </div>
</div>

<!-- Create/Update Modal -->
<div class="modal fade" id="configModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add Configuration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="configForm">
                    <input type="hidden" id="configId" />
                    
                    <div class="form-group mb-3">
                        <label>Company</label>
                        <select class="form-control" id="companyId" required>
                            <option value="">Select Company</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label>Database IP / Server</label>
                        <input type="text" class="form-control" id="databaseIP" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Database Name</label>
                        <input type="text" class="form-control" id="databaseName" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Database User ID</label>
                        <input type="text" class="form-control" id="databaseUserId" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Database Password</label>
                        <input type="password" class="form-control" id="databasePassword" />
                        <small class="text-muted" id="passwordHelp">Required for new configurations.</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveConfigBtn">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Admin/DatabaseConfigurations.js"></script>
}
